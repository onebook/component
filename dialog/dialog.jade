
mixin dialog(id, type, btn, texts)
  - if (typeof texts === 'string') { texts = [texts] }
  div.com-dialog(id="#{id}")
    div.content(class="#{type}")
        each text in texts
          div= text
        span.btn(onclick="dialog('#{id}').hide()")= btn

mixin dialogSlide(id, type, btn, texts)
  - if (typeof texts === 'string') { texts = [texts] }
  div.com-dialog-slide(id="#{id}")
    div.content(class="#{type}")
        each text in texts
          div= text
        span.btn(onclick="dialogSlide('#{id}').hide()")= btn
